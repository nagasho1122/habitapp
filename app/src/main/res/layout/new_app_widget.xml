<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/changewidgetbackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="目的："
            android:textColor="@color/changetextcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/goalwidgetText"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="目的をアプリで設定しよう"
            android:textColor="@color/changetextcolor"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="目標："
            android:textColor="@color/changetextcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/targetwidgetText"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="目標をアプリで設定しよう"
            android:textColor="@color/changetextcolor"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayText1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:gravity="top|left"
                android:paddingLeft="4dp"
                android:text="5-29"
                android:textColor="@color/changetextcolor"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/stampView1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:srcCompat="@drawable/stamp1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayText2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:gravity="top|left"
                android:paddingLeft="4dp"
                android:text="5-29"
                android:textColor="@color/changetextcolor"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/stampView2"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayText3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:gravity="top|left"
                android:paddingLeft="4dp"
                android:text="5-29"
                android:textColor="@color/changetextcolor"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/stampView3"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayText4"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:gravity="top|left"
                android:paddingLeft="4dp"
                android:text="5-29"
                android:textColor="@color/changetextcolor"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/stampView4"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayText5"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:gravity="top|left"
                android:paddingLeft="4dp"
                android:text="5-29"
                android:textColor="@color/changetextcolor"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/stampView5"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayText6"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:gravity="top|left"
                android:paddingLeft="4dp"
                android:text="5-29"
                android:textColor="@color/changetextcolor"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/stampView6"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayText7"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:gravity="top|left"
                android:paddingLeft="4dp"
                android:text="5-29"
                android:textColor="@color/changetextcolor"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/stampView7"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/habitwidgetNumber"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/changetextcolor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="回継続"
            android:textColor="@color/changetextcolor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/donewidgetButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/background_circle"
            android:text="DONE"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>